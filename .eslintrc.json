{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier",
        "import"
    ],
    "rules": {
        "prettier/prettier": ["error"],
        "no-use-before-define": "off",
        "import/prefer-default-export": "off",
        "no-underscore-dangle": 0,
        "no-unused-expressions": ["error", { "allowShortCircuit": true }],
        "import/extensions": [
          "error",
          "ignorePackages",
          {
            "ts": "never"
          }
       ],
       "camelcase": "off",
       "consistent-return": "off",
       "class-methods-use-this": 0
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [".ts"]
        }
      }
    }
}
